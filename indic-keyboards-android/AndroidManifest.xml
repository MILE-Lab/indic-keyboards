<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.iisc.mile.indickeyboards.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/ime_name" >
        <service
            android:name="org.iisc.mile.indickeyboards.android.SoftKeyboard"
            android:permission="android.permission.BIND_INPUT_METHOD" >
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="org.iisc.mile.indickeyboards.android.SettingsActivity"
            android:icon="@drawable/icon"
            android:label="@string/settings_title" >
        </activity>
        <activity
            android:name="org.iisc.mile.indickeyboards.android.AboutActivity"
            android:icon="@drawable/icon"
            android:label="@string/about_title" >
        </activity>
    </application>

</manifest>